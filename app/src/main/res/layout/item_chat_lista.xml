<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:padding="8dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imagenPerfilChat"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:contentDescription="Foto perfil"
        android:src="@drawable/imagenpordefecto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/nombreUsuarioChat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del usuario"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/imagenPerfilChat"
        app:layout_constraintTop_toTopOf="@id/imagenPerfilChat"
        app:layout_constraintBottom_toBottomOf="@id/imagenPerfilChat"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
