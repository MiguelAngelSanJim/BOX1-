<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:paddingBottom="80dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textoComprar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="Confirmar compra"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/layoutCompra"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/spinner_background"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/textoComprar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp">

            <!-- Dirección -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección de envío"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/editTextCalle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_style"
                android:hint=" C/ Fernando Alonso Díaz 33" />

            <EditText
                android:id="@+id/editTextPortal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_style"
                android:hint=" 3ºC" />

            <EditText
                android:id="@+id/editTextCiudad"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_style"
                android:hint=" Mérida" />

            <EditText
                android:id="@+id/editTextProvincia"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_style"
                android:hint=" Badajoz" />

            <EditText
                android:id="@+id/editTextCodigoPostal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/edittext_style"
                android:hint=" 06700" />

            <!-- Envío -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Método de envío"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

            <CheckBox
                android:id="@+id/checkboxCorreos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correos estándar (3-5 días) Gratis"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <CheckBox
                android:id="@+id/checkboxExpress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Envío express 24h  +5,00€"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp" />

            <!-- Pago -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Método de pago"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

            <RadioGroup
                android:id="@+id/radioGroupPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <RadioButton
                    android:id="@+id/radioContraReembolso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contra reembolso"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/radioGooglePay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google Pay"
                    android:textColor="@color/black" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/layoutDesglosePrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/textPrecioProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio del producto: 20€"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textPrecioEnvio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Envío: 0€"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textPrecioTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total: 20€"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>


            <!-- Botón Confirmar -->
            <Button
                android:id="@+id/btnConfirmarCompra"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Confirmar compra"
                android:backgroundTint="#0B1B4E"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
