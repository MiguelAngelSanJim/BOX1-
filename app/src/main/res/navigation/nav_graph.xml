<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/login">


    <fragment
        android:id="@+id/login"
        android:name="com.boxuno.vista.Login"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_registro"
            app:destination="@id/registro" />
        <action
            android:id="@+id/action_login_to_inicio"
            app:destination="@id/inicio" />
        <action
            android:id="@+id/action_login_to_recuperar_contrasenia"
            app:destination="@+id/recuperar_contrasenia" />
    </fragment>

    <fragment
        android:id="@+id/registro"
        android:name="com.boxuno.vista.Registro"
        android:label="Registro"
        tools:layout="@layout/fragment_registro">
        <argument
            android:name="emailNoRegistrado"
            android:defaultValue=""
            app:argType="string" />
        <action
            android:id="@+id/action_registro_to_inicio"
            app:destination="@id/inicio" />
    </fragment>


    <fragment
        android:id="@+id/inicio"
        android:name="com.boxuno.vista.Inicio"
        android:label="Inicio"
        tools:layout="@layout/fragment_inicio">

        <action
            android:id="@+id/action_inicio_to_detalle_producto"
            app:destination="@id/detalleProducto" />
    </fragment>

    <fragment
        android:id="@+id/detalleProducto"
        android:name="com.boxuno.vista.DetalleProducto"
        android:label="Detalle producto"
        tools:layout="@layout/fragment_detalle_producto">
        <action
            android:id="@+id/action_visitar_perfil"
            app:destination="@id/visitarPerfil" />
        <action
            android:id="@+id/action_detalleProducto_self"
            app:destination="@id/detalleProducto" />
        <action
            android:id="@+id/action_detalle_to_comprar"
            app:destination="@+id/comprar" />
        <action
            android:id="@+id/action_detalle_to_chat"
            app:destination="@+id/chatConversacion" />
    </fragment>
    <fragment
        android:id="@+id/comprar"
        android:name="com.boxuno.vista.Comprar"
        android:label="Comprar"
        tools:layout="@layout/fragment_comprar">
        <action
            android:id="@+id/action_comprar_to_inicio"
            app:destination="@+id/inicio" />
    </fragment>

    <fragment
        android:id="@+id/subirProducto"
        android:name="com.boxuno.vista.SubirProducto"
        android:label="Subir producto"
        tools:layout="@layout/fragment_subir_producto">
        <action
            android:id="@+id/action_subir_producto_to_inicio"
            app:destination="@+id/inicio" />
    </fragment>

    <fragment
        android:id="@+id/perfil"
        android:name="com.boxuno.vista.Perfil"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil" />

    <fragment
        android:id="@+id/favoritos"
        android:name="com.boxuno.vista.Favoritos"
        android:label="Favoritos"
        tools:layout="@layout/fragment_favoritos">
        <action
            android:id="@+id/action_favoritos_to_detalle_producto"
            app:destination="@id/detalleProducto"/>
    </fragment>

    <fragment
        android:id="@+id/chatLista"
        android:name="com.boxuno.vista.ChatLista"
        android:label="Lista de chats"
        tools:layout="@layout/fragment_chat_lista" />

    <fragment
        android:id="@+id/chatConversacion"
        android:name="com.boxuno.vista.ChatConversacion"
        android:label="Chat privado"
        tools:layout="@layout/fragment_chat_conversacion" />
    <fragment
        android:id="@+id/editarPerfil2"
        android:name="com.boxuno.vista.EditarPerfil"
        android:label="fragment_editar_perfil"
        tools:layout="@layout/fragment_editar_perfil" />
    <fragment
        android:id="@+id/direccion"
        android:name="com.boxuno.vista.Direccion"
        android:label="fragment_direccion"
        tools:layout="@layout/fragment_direccion" />
    <fragment
        android:id="@+id/recuperar_contrasenia"
        android:name="com.boxuno.vista.recuperar_contrasenia"
        android:label="recuperar_contrasenia"
        tools:layout="@layout/fragment_recuperar_contrasenia" />
    <fragment
        android:id="@+id/visitarPerfil"
        android:name="com.boxuno.vista.VisitarPerfil"
        android:label="VisitarPerfil"
        tools:layout="@layout/fragment_visitar_perfil" />

</navigation>
