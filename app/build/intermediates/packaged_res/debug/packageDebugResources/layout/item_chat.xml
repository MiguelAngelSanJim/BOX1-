<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="12dp">

    <ImageView
        android:id="@+id/chatImagenUsuario"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/imagenpordefecto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/chatNombreUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre Usuario"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/chatImagenUsuario"
        app:layout_constraintStart_toEndOf="@id/chatImagenUsuario"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/chatUltimoMensaje"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Ãšltimo mensaje enviado..."
        android:textColor="#777777"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/chatImagenUsuario"
        app:layout_constraintEnd_toEndOf="@id/chatNombreUsuario"
        app:layout_constraintStart_toStartOf="@id/chatNombreUsuario"
        app:layout_constraintTop_toBottomOf="@id/chatNombreUsuario" />
</androidx.constraintlayout.widget.ConstraintLayout>
