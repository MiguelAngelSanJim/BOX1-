<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0D4E4">

    <!-- Barra superior con foto + nombre -->
    <LinearLayout
        android:id="@+id/headerUsuario"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@color/blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imagenPerfilOtroUsuario"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/imagenpordefecto"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            android:clipToOutline="true" />

        <TextView
            android:id="@+id/nombreOtroUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre_usuario"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Lista de mensajes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMensajes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerUsuario"
        app:layout_constraintBottom_toTopOf="@id/contenedorMensaje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Input de mensaje + botÃ³n enviar -->
    <LinearLayout
        android:id="@+id/contenedorMensaje"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="@drawable/edittext_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editTextoMensaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Escribe un mensaje..."
            android:maxLines="5"
            android:minHeight="48dp"
            android:background="@null"
            android:padding="8dp"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/btnEnviarMensaje"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_enviar"
            android:contentDescription="Enviar"
            app:tint="@color/blue" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
